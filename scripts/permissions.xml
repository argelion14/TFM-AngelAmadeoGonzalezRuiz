<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/7.5.0/dds_security_permissions.xsd">
  <permissions>
    <!-- Permisos para el participante Alice -->
    <grant name="ParticipantAlice">
      <subject_name>C=US, ST=CA, O=DemoSigner, CN=Alice</subject_name>
      <validity>
        <not_before>2023-01-01T00:00:00</not_before>
        <not_after>2029-01-01T00:00:00</not_after>
      </validity>
      
      <!-- Permiso para publicar en el tema "PatientMonitoring" -->
      <allow_rule>
        <domains>
          <id>1</id>
        </domains>
        <publish>
          <topics>
            <topic>PatientMonitoring</topic>
          </topics>
        </publish>
      </allow_rule>

      <!-- No otros permisos -->
      <default>DENY</default>
    </grant>

    <!-- Permisos para el participante Bob -->
    <grant name="ParticipantBob">
      <subject_name>C=US, ST=CA, O=DemoSigner, CN=Bob</subject_name>
      <validity>
        <not_before>2023-01-01T00:00:00</not_before>
        <not_after>2029-01-01T00:00:00</not_after>
      </validity>

      <!-- Permiso para suscribirse a temas relacionados con "Patient" -->
      <allow_rule>
        <domains>
          <id>1</id>
        </domains>
        <subscribe>
          <topics>
            <topic>*Patient*</topic>
          </topics>
        </subscribe>
      </allow_rule>

      <!-- No otros permisos -->
      <default>DENY</default>
    </grant>
  </permissions>
</dds>
